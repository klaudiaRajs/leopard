{% form_theme form 'my.form.twig' %}
<html>
<head>
    <title>Add your file</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body class="p-3 mb-2 text-white bg-secondary">
<div class="container">
    <div class="row">
        <p>Please, be aware that this application was a created for research purposes and MUST NOT be used as a source of knowledge or a teaching tool </p>
    </div>
    <div class="row">
        <p> For testing purposes, please see the uploaded files: <a href="http://leopardslim.com/testRun">Take me for test run!</a> </p>
    </div>
    <div class="row">
        <div class="col align-self-start bg-dark p-5 rounded border border-warning">
            {{ form_start(form) }}
            <label>Please select number of introduced problems</label>
            {{ form_row(form.introducedProblems, {'attr': {'class': 'form-control-number ml-4 mb-3'}, 'type': 'number', 'value':'1', 'min':'0'}) }}
            {{ form_row(form.file, {'attr': {'class': 'form-control-file ml-4 mb-3'}, 'type': 'file'}) }}
            <label>Please select which naming convention your code follows</label>
            {{ form_row(form.convention, {'attr': {'class': 'ml-4 mb-3'}}) }}
            <div id="fields"></div>
            <input class="mb-4 ml-4" type="button" value="Add one more file" onclick="addOneMore()"> <br>
            {{ form_row(form.submit, { 'label': 'Analyze' }) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
    var i = 1;

    function addOneMore() {
        $("#fields").append("<hr><label>Please select number of introduced problems</label>" +
            "<div><label for=\"form_introducedProblems\" class=\"required\">Introduced problems</label>" +
            "<input type=\"number\" id=\"form_introducedProblems\" name=\"form[" + i + "][introducedProblems]\" required=\"required\" class=\"form-control-number ml-4 mb-3\" value=\"1\" />" +
            "</div><div><label for=\"form_file\" class=\"required\">File</label>" +
            "<input type=\"file\" id=\"form_file\" name=\"form[" + i + "][file]\" required=\"required\" class=\"form-control-file ml-4 mb-3\" value=\"File name\" />" + //File input
            "</div> <div> <label class=\"required\">Convention</label> <div id=\"form_convention\" class=\"ml-4 mb-3\"> " +
            "<div class=\"radio-1\">" +
            "<input type=\"radio\" id=\"form_convention_0\" name=\"form["+i+"][convention]\" required=\"required\" value=\"camelCase\" /> " + //Radio-1
            "<label for=\"form_convention_0\" class=\"required\">camelCaseConvention</label> </div> <div class=\"radio-2\"> " +
            "<input type=\"radio\" id=\"form_convention_1\" name=\"form["+i+"][convention]\" required=\"required\" value=\"Pascal\" /> " + //Radio-2
            "<label for=\"form_convention_1\" class=\"required\">PascalCaseConvention</label> </div> <div class=\"radio-3\"> " +
            "<input type=\"radio\" id=\"form_convention_2\" name=\"form["+i+"][convention]\" required=\"required\" value=\"underscore\" /> " + //Radio-3
            "<label for=\"form_convention_2\" class=\"required\">underscore_convention</label> </div> </div>");
        i++;
        return false;
    }
</script>
</body>
</html>
